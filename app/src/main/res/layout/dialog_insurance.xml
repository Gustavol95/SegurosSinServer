<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView   xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardElevation="@dimen/cardElevation"
    android:background="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:theme="@style/MyEditTextTheme">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/poliza"
            android:hint="Póliza"
            android:layout_width="match_parent"
            android:lines="1"
            android:layout_height="45dp"
            android:textSize="16sp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/nombre"
            android:hint="Nombre del seguro"
            android:layout_width="match_parent"
            android:lines="1"
            android:layout_height="45dp"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/aseguradora"
            android:hint="Nombre aseguradora"
            android:layout_width="match_parent"
            android:lines="1"
            android:layout_height="45dp"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/asegurado"
            android:hint="Asegurado"
            android:layout_width="match_parent"
            android:lines="1"
            android:layout_height="45dp"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/renovacion"
            android:hint="Fecha de renovación"
            android:layout_width="match_parent"
            android:lines="1"
            android:focusable="false"
            android:layout_height="45dp"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"/>
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/telefono"
            android:hint="Tel. Emergencias"
            android:inputType="number"
            android:layout_width="match_parent"
            android:lines="1"
            android:layout_height="45dp"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"/>




    </LinearLayout>
    </ScrollView>
</android.support.v7.widget.CardView>
